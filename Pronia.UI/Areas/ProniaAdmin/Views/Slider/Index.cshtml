@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Pronia.Core.Entities
@model IEnumerable<Slider>
@{
	ViewData["Title"] = "Index";
	int count = 1;
}

<h1>Slider</h1>

<div class="container-fluid">

	<!-- start page title -->
	<div class="row">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Sliders</h4>
				<a asp-action="Create" class="btn btn-primary mb-4">Create New Slider</a>
				<div class="table-responsive">
					<table class="table table-dark mb-0">

						<thead>
							<tr>
								<th>#</th>
								<th>Image</th>
								<th>Title</th>
								<th>Description</th>
								<th>Offer</th>
								<th>Settings</th>

							</tr>
						</thead>
						<tbody>
							@foreach (var slider in Model)
							{
								<tr>
									<th scope="row">@count</th>
									<td> <img src="@slider.ImagePath" style="width:100px" /> </td>
									<td>@slider.Title</td>
									<td>@slider.Description</td>
									<td>@slider.Offer</td>
									<td>
										<a asp-action="Update" class="btn btn-warning mb-4">Edit</a>
										<a asp-action="Delete" class="btn btn-danger mb-4">Delete</a>
									</td>
								</tr>
								count++;
							}
							
						</tbody>
					</table>
				</div>

			</div>
		</div>
	</div>
</div>